<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_contact_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/z_margin_mini" >

    <LinearLayout
        android:id="@+id/image_contact_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/contact_image_iv"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="@dimen/z_margin_mini"
            android:layout_marginStart="@dimen/z_margin_mini"
            android:src="@mipmap/ic_launcher"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/z_margin_medium"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/contact_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:layout_marginStart="@dimen/z_margin_small"
                android:textSize="@dimen/z_font_small"
                android:textColor="@android:color/primary_text_light"
                android:text="@string/name_string"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/phone_number_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:layout_marginStart="@dimen/z_margin_small"
                android:textSize="@dimen/z_font_mini"
                android:textColor="@android:color/primary_text_light"
                android:text="@string/phone_string"
                />

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/contact_edit_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/z_margin_6dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_edit"
        android:drawable="@color/colorAccent"
        android:visibility="gone"
        />

</RelativeLayout>